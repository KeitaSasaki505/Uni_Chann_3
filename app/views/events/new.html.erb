<%= render 'shared/header'%>
<%= render 'shared/back'%>

<%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= form_with model: @event, class: 'registration-main', local: true do |f| %>
  
  <div class="form-main">
    <div class="form-edit">
      <h3 class='form-header-text'>
      新しいイベントを投稿する
      </h3>

      <div class="form-2">
        <label for="event-image" class="form-item" id="file-field">
        <span>イベントイメージ画像をアップロード(3枚まで)</span>
        <%= f.file_field :images, name: 'event[images][]', id: "event-image", direct_upload: true, multiple: true, data: {index:0}, class:'form-file-field' %>
        </label>
      </div>
      
      <div id="pre-images" class="pre-imagesbox"></div>

      <div class="form-1">
        <%= f.label :イベントの種類 %><br />
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>

      <div class="form-1">
        <%= f.label :イベント名%><br />
        <%= f.text_area :project, class: "form-text" %>
      </div>

      <div class="form-1">
        <%= f.label :イベント概要%><br />
        <%= f.text_area :overview, class: "form-text" %>
      </div>

      <div class="form-1">
        <%= f.label :開催予定日時%><br />
        <%= f.date_field :date, class: "form-text" %>
      </div>

      <div class="form-1">
        <%= f.label :メールアドレス（連絡先） %><br />
        <%= f.text_area :email, placeholder:"参加者との連絡が可能なアドレス", class: "form-text" %>
      </div>

      <div class="form-1">
        <%= f.label :電話番号 %><br />
        <%= f.telephone_field :phone, placeholder:"例）09011111111", class: "form-text"%>
      </div>

      <div class="form-1">
        <%= f.label :開催場所（住所）%><br />
        <%= f.text_area :address, placeholder:"例)東京都港区六本木1-1-1", class: "form-text" %>
      </div>
    
      <div class="form-edit-btn">
        <%= f.submit "イベントを投稿", class:"form-submit" %>
      </div>
    </div>
  </div>
<% end %>