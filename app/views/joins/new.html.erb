<h2>イベント参加申込</h2>

<%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= form_with model: @join, url: event_joins_path, class: 'registration-main', local: true do |f| %>

  <h3 class='form-header-text'>
    参加フォーム入力
  </h3>
  <div class="field">
    <%= f.label :氏名%><br />
    <%= f.text_field :name_kanji, placeholder:"名前(漢字フルネーム)" %>
  </div>

  <div class="field">
    <%= f.label :カナ入力%><br />
    <%= f.text_field :name_kana, placeholder:"フリガナ" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :コメント %><br />
    <%= f.text_area :message, rows: 3, placeholder:"(空欄でも可：何か要望がございましたらご記入ください)" %>
  </div>

  <div class="field">
    <%= f.submit "参加登録する" ,class:"" %>
  </div>
  

<% end %>